<MainGridLayout>
    file:file
    read:read
    canvas.before:
        Color: 
            rgba: 76/255, 114/255, 29/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1
        size: root.width, root.height
        padding: 10
        spacing: 10

        GridLayout:
            cols:4
            size_hint_y: None
            height: 50

            Label:
                text: "Input File: "

                size_hint_x: None
                width: 100
                text_size: self.size
                halign: "left"
                valign: "middle"
            
            TextInput:
                id: file

                multiline:False
                size_hint_x: 5

            Button:
                id: run_button
                text: "Run"
                on_press: root.press_file()

            Button:
                id: help
                text: "help"


        GridLayout:
            cols: 5
            size_hint_y: None
            height: 50

            Label:
                text: "Read: "

                size_hint_x: None
                width: 100
                text_size: self.size
                halign: "left"
                valign: "middle"

            TextInput:
                id: read

                multiline: False
                size_hint_x: 4
            
            Button:
                id: submit_button
                text: "Submit"
                on_press: root.press_read()

            Label:
                text: "Write: "
            
            Label:
                id: write
                text: ""

                background_color: (1,1,1,1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                color: (0,0,0,1)
                size_hint_x: 4
                text_size: self.width, None
                height: self.texture_size[1]
                

        GridLayout:
            cols: 4
            size_hint_y: None
            height: 50

            Label:
                text: "Accumulator: "

                size_hint_x: None
                width: 100
                text_size: self.size
                halign: "left"
                valign: "middle"
            
            TextInput:
                id: accumulator

                multiline: False
                size_hint_x: 2
            
            Label:
                text: "Debug menu: "
                width: 100
            
            Label:
                id: debug
                text: ""

                size_hint_x: 4

        GridLayout:
            cols: 2

            Label:
                text: "Output: "

                size_hint_x: None
                width: 100
                text_size: self.size
                halign: "left"
                valign: "top"

            Label:
                id: output
                text: ""

                background_color: (1,1,1,1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                color: (0,0,0,1)
                text_size: self.width, None
                height: self.texture_size[1]
