<Label>
    color: (200/255, 200/255, 200/255, 1)

<Button>
    id: mybutton
    background_color: (1,1,1,1)
    color: (100/255, 100/255, 100/255, 1)
    background_normal: ''

<MainGridLayout>
    file:file
    read:read
    primary_color_input:primary_color_input
    secondary_color_input:secondary_color_input

    GridLayout:
        id: background
        canvas.before:
            Color:
                rgba: 35/255, 93/255, 56/255, 1
            Rectangle:
                pos: self.pos
                size: self.size

        cols: 1
        size: root.width, root.height
        padding: 10
        spacing: 10

        GridLayout:
            cols:4
            size_hint_y: None
            height: 50

            Label:
                text: "Input File: "

                size_hint_x: None
                width: 100
                text_size: self.size
                halign: "left"
                valign: "middle"
            
            TextInput:
                id: file

                multiline:False
                size_hint_x: 5

            Button:
                id: run_button
                text: "Run"
                on_press: root.press_file()

            Button:
                id: help
                text: "help"


        GridLayout:
            cols: 5
            size_hint_y: None
            height: 50

            Label:
                text: "Read: "

                size_hint_x: None
                width: 100
                text_size: self.size
                halign: "left"
                valign: "middle"

            TextInput:
                id: read

                multiline: False
                size_hint_x: 4
            
            Button:
                id: submit_button
                text: "Submit"
                on_press: root.press_read()

            Label:
                text: "Write: "
            
            Label:
                id: write
                text: ""

                background_color: (1,1,1,1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                color: (0,0,0,1)
                size_hint_x: 4
                text_size: self.width, None
                height: self.texture_size[1]
                
        #color buttons
        GridLayout:
            cols: 6
            size_hint_y: None
            height: 50

            Label:
                text: "Primary Color: "
                
                size_hint_x: None
                width: 100
                text_size: self.size
                halign: "left"
                valign: "middle"
            
            TextInput:
                id: primary_color_input

                multiline: False
            
            Button:
                id: primary_color_button

                text: "Apply"
                on_press: root.press_primary_color()
            
            Label:
                text: "Secondary Color: "
            
            TextInput:
                id: secondary_color_input

                multiline: False
            
            Button:
                id: secondary_color_button

                text: "Apply"
                on_press: root.press_secondary_color()

        GridLayout:
            cols: 2

            Label:
                text: "Output: "

                size_hint_x: None
                width: 100
                text_size: self.size
                halign: "left"
                valign: "top"

            Label:
                id: output
                text: ""

                background_color: (1,1,1,1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                color: (0,0,0,1)
                text_size: self.width, None
                height: self.texture_size[1]
